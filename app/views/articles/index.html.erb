<h1>Articles</h1>

<div class="articles__list">
  <% @articles.each do |article| %>
    <div class="article__list--item">
      <h2><%= link_to article.title, article.url, target: "_blank" %></h2>
      <div class="article__list--photo">
        <% if article.photo.attached? %>
          <%= image_tag article.photo, alt: article.title, class: 'article-photo' %>
        <% else %>
          <%= image_tag 'placeholder.png', alt: 'Placeholder image', class: 'article-photo' %>
        <% end %>
      </div>
      <p><%= truncate(article.content, length: 200) %></p>
    </div>
  <% end %>
</div>
